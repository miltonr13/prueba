
let numero = 9;

// for
console.log(`Tabla de ${numero} usando for:`);
for(let i = 1; i <= 10; i++){
    console.log(`${numero} x ${i} = ${numero * i}`);
}

// while
console.log(`Tabla de ${numero} usando while:`);
let j = 1;
while(j <= 10){
    console.log(`${numero} x ${j} = ${numero * j}`);
    j++;
}

// do-while
console.log(`Tabl de ${numero} usando do-while:`);
let k = 1;
do {
    console.log(`${numero} x ${k} = ${numero * k}`);
    k++;
} while(k <= 10);
